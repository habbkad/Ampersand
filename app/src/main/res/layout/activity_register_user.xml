<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUser"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/logincard">


                <android.support.v7.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="559dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="30dp"

                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/backcard">


                            <ImageButton
                                android:id="@+id/userImage"
                                android:layout_width="match_parent"
                                android:layout_height="190dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/adduser" />

                            <EditText
                                android:id="@+id/userFullname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="184dp"
                                android:hint="fullname"
                                android:maxLines="1" />
                            //email

                            <EditText
                                android:id="@+id/userEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/userFullname"
                                android:hint="email"
                                android:inputType="textEmailAddress" />

                            <EditText
                                android:id="@+id/userPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/userEmail"
                                android:layout_centerHorizontal="true"
                                android:hint="password"
                                android:inputType="textWebPassword" />


                            <EditText
                                android:id="@+id/userPhonenumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/userPassword"
                                android:layout_centerHorizontal="true"
                                android:hint="phone number"
                                android:inputType="numberDecimal" />

                            <EditText
                                android:id="@+id/userRole"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/userPhonenumber"
                                android:layout_centerHorizontal="true"
                                android:hint="role"
                                android:singleLine="true" />

                            <EditText
                                android:id="@+id/userTwitteracc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/userRole"
                                android:layout_centerHorizontal="true"
                                android:hint="twitter"
                                android:maxLines="1" />

                            <EditText
                                android:id="@+id/userLinkedin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/userTwitteracc"
                                android:layout_centerHorizontal="true"
                                android:hint="linked in"
                                android:maxLines="1" />


                            <Button
                                android:id="@+id/button"
                                android:layout_width="200dp"
                                android:layout_centerInParent="true"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/userLinkedin"
                                android:background="@drawable/roundbtn"
                                android:text="sign up" />

                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>